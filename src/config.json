{
	"folder-options": {
		"source": ["F:\\", "DCIM", "100D7100"],
		"destination": ["D:\\", "workspace", "project_testing"],
		"create-destination-if-not-exists": true,
		"file-name-and-date": "%Y-%m-%d_%I.%M.%S %p",
	},
	"options": {
		"image-number-total-pad": 4,
		"image-name": "%04d",
		"image-type": ".jpg",
		"image-per-second": 30,
		"image-start-number": 0,
		"video-framerate": 30,
		"video-codec": "libx264",
		"video-height": 1920,
		"video-width": 1080,
		"video-output-name": "timelapse",
		"video-container": "mp4"
	},
	"ffmpeg-command":[
		"ffmpeg",
		"-framerate", 		"{image-per-second}",
		"-start_number", 	"{image-start-number}",
		"-i", 				"{image-name}{image-type}",
		"-s:v", 			"{video-height}x{video-width}",
		"-c:v", 			"{video-codec}",
		"-r", 				"{video-framerate}",
		"{video-output-name}.{video-container}"
	]
}
